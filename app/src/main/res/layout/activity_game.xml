<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mmkay"
    android:padding="16dp">

    <Button
        android:id="@+id/pause_button"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="-48dp"
        android:backgroundTint="@color/black"
        android:text="||"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="135dp"
        android:background="@color/white"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Level: "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/audiowide"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/equationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300sp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userAnswerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/equationTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="4"
        android:inputType="number"
        android:shadowColor="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userAnswerEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/start_color"
        android:fontFamily="@font/audiowide"
        android:text="Next Question"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelTextView"
        android:layout_marginTop="20sp"
        android:layout_toStartOf="@+id/timerTextView"
        android:layout_toEndOf="@+id/livesTextView"
        android:background="@color/white"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Score: 0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/livesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20sp"
        android:background="@color/white"
        android:fontFamily="@font/audiowide"
        android:text="Lives: 3"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>